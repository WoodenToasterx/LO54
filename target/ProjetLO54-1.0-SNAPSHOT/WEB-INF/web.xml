<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>fr.utbm.course.controller</display-name>
    <servlet>
        <servlet-name>CourseController</servlet-name>
        <servlet-class>fr.utbm.course.controller.CourseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseController</servlet-name>
        <url-pattern>/Course</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CourseSessionController</servlet-name>
        <servlet-class>fr.utbm.course.controller.CourseSessionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseSessionController</servlet-name>
        <url-pattern>/CourseSession</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ClientController</servlet-name>
        <servlet-class>fr.utbm.course.controller.ClientController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientController</servlet-name>
        <url-pattern>/Client</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
        
    <welcome-file-list>
        <welcome-file>Index.html</welcome-file>
    </welcome-file-list>
</web-app>